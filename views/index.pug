extends layout

block content
  article.slds-card
    .slds-card__header.slds-grid
      header.slds-media.slds-media_center.slds-has-flexi-truncate
        .slds-media__figure
          span.slds-icon_container.slds-icon-standard-goals(title="goals")
            svg.slds-icon.slds-icon_small(aria-hidden="true")
              use(xlink:href="/icons/standard-sprite/svg/symbols.svg#goals")
            span.slds-assistive-text goals
        .slds-media__body
          h2.slds-card__header-title
            a.slds-card__header-link.slds-truncate(href="javascript:void(0);" title="Card Header")
              span= title
    .slds-card__body.slds-card__body_inner
      form.js-settings-form
        .slds-form-element
          label.slds-form-element__label.slds-text-title_bold(for="DropdownOptions") Stage
          .slds-form-element__control
            .slds-select_container
              select#DropdownOptions.slds-select.js-activity-setting(name='dropdownOptions')
                each dropdownOption in dropdownOptions
                  option(value=dropdownOption.value)= dropdownOption.name

          label.slds-form-element__label.slds-text-title_bold(for="SendableDEDropdown") Stage
          .slds-form-element__control
            .slds-select_container
              select#SendableDEDropdown.slds-select.js-activity-setting(name='SendableDEDropdown')
                each DElistItem in DElist
                  option(value=DElistItem.value)= DElistItem.name
              
          label.slds-form-element__label.slds-p-top_medium.slds-text-title_bold(for='DataExtensionCustomerKey')
            abbr.slds-required(title='required')
            | Data Extension CustomerKey *
            span.slds-badge Make sure you use CustomerKey
          .slds-form-element__control
            input#DataExtensionCustomerKey.slds-input.js-activity-setting(required='', placeholder='', name='DataExtensionCustomerKey')

          label.slds-form-element__label.slds-p-top_medium.slds-text-title_bold(for='TrackingMessage')
            abbr.slds-required(title='required')
            | Tracking Message *
          .slds-form-element__control
            input#TrackingMessage.slds-input.js-activity-setting(required='', placeholder='', name='TrackingMessage')
            
    footer.slds-card__footer
